# Telegram API Configuration
# Get from https://my.telegram.org/apps
TELEGRAM_API_ID=12345
TELEGRAM_API_HASH=your_api_hash_here

# Session and Groups
TELEGRAM_SESSION_PATH=./data/telethon.session
# EDIT ME: REPLACE WITH REAL GROUPS YOU CAN ACCESS (run python debug_messages.py to find them)
TELEGRAM_GROUPS=@your_actual_group_name
# EDIT ME: Chat ID where alerts are sent
TELEGRAM_ALERT_CHAT_ID=-123456789

# Database
DB_URL=postgresql+psycopg://fraud_user:fraud_pass@db:5432/fraud_db

# File Storage
MEDIA_DIR=./data/media
MAX_MEDIA_SIZE=10485760

# OCR Configuration
OCR_LANG=eng
OCR_CONFIDENCE_THRESHOLD=30
OCR_TIMEOUT=10

# Brand Matching
# EDIT ME: Brands/keywords to detect (comma-separated)
BRAND_KEYWORDS=CloudWalk,InfinitePay,Visa,Mastercard
FUZZY_THRESHOLD=85
MATCH_MIN_LENGTH=3

# Processing
BATCH_SIZE=10
PROCESSING_INTERVAL=5
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/app.log
LOG_MAX_SIZE=104857600
LOG_BACKUP_COUNT=5

# Security
ALERT_RATE_LIMIT=10
API_TIMEOUT=30